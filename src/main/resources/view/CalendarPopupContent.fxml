<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="popupContent" alignment="TOP_CENTER" fillWidth="false" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="clientLabel" alignment="CENTER" prefWidth="200.0" style="-fx-text-fill: black;" />
      <FlowPane fx:id="datePane" alignment="CENTER">
         <children>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/calendar.png" />
               </image>
            </ImageView>
            <Label fx:id="dateLabel" alignment="CENTER" prefWidth="200.0" style="-fx-text-fill: black;" />
         </children>
      </FlowPane>
      <FlowPane fx:id="timePane" alignment="CENTER">
         <children>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/clock.png" />
               </image>
            </ImageView>
            <Label fx:id="timeLabel" alignment="CENTER" prefWidth="200.0" style="-fx-text-fill: black;" />
         </children>
      </FlowPane>
      <FlowPane fx:id="locationPane" alignment="CENTER">
         <children>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/location.png" />
               </image>
            </ImageView>
            <Label fx:id="locationLabel" alignment="CENTER" prefWidth="200.0" style="-fx-text-fill: black;" wrapText="true" />
         </children>
      </FlowPane>
   </children>
</VBox>
